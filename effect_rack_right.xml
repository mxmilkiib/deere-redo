<!DOCTYPE template>
<!--
Right effect rack container (Effect Units 2 and 4)
-->
<Template>
  <WidgetGroup>
    <Connection>
      <ConfigKey>[Skin],show_effectrack</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
    <Layout>vertical</Layout>
    <SizePolicy>me,f</SizePolicy>
    <Children>
      <WidgetGroup>
        <ObjectName>EffectRackContainer</ObjectName>
        <Layout>vertical</Layout>
        <Children>

          <!-- Effect Unit 2 -->
          <Template src="skin:effect_unit.xml">
            <SetVariable name="EffectRack">1</SetVariable>
            <SetVariable name="EffectUnit">2</SetVariable>
          </Template>

          <Template src="skin:spacer_vx.xml">
            <SetVariable name="height">1</SetVariable>
            <SetVariable name="color">22</SetVariable>
          </Template>

          <!-- Effect Unit 4 -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <SizePolicy>me,me</SizePolicy>
            <Children>
              <Template src="skin:effect_unit.xml">
                <SetVariable name="EffectRack">1</SetVariable>
                <SetVariable name="EffectUnit">4</SetVariable>
              </Template>
            </Children>
            <Connection>
              <ConfigKey>[Skin],show_4effectunits</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
          </WidgetGroup>

        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
